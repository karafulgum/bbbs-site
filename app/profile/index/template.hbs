<div class="container">
  <h1 class="profile_heading">Welcome {{currentUser.user.firstName}}!</h1>

  <div class="profile profile--flex">
    <div class="form__frame">
      <img src="http://placekitten.com/300/300" class="form__img">
    </div>
    <div class="profile__content">


      <div class="profile__content-names">{{currentUser.user.firstName}} {{currentUser.user.lastName}}</div>
      <div class="profile__content-input">{{currentUser.user.employer}} </div>
      <div class="profile__content-input">{{currentUser.user.email}} </div>
      <div class="profile__content-input"> Little's Name: {{currentUser.user.little}} </div>

      {{#link-to "profile.edit" class= "profile__btn"}} Edit Profile {{/link-to}}
    </div>
</div>
</div>

<div class="container">
  <h1 class="calendar__heading">Upcoming Events</h1>
    <div class="calendar">
      <button class="calendar__btn">Sort By<i class="fa fa-angle-down" aria-hidden="true"></i></button>
      {{#each model as |value|}}
      <div class="calendar__group">
        <div class="calendar__sidebar">
          <p class="calendar__sidebar-date">{{moment-format value.date "MMM D"}}</p>
        </div>
        <div class="calendar__main">
          <p class="calendar__event">{{ value.name }}</p>
          <p class="calendar__date">{{moment-format value.date "dddd, MMMM Do"}}</p>
          <p class="calendar__location">{{ value.location }}</p>
          <p class="calendar__time">{{moment-format value.startTime "hh:mm A" "HH:mm"}} - {{moment-format value.endTime "hh:mm A" "HH:mm"}}</p>
          <p class="calendar__description">{{ value.message }}</p>
          <div class="calendar__tickets">
            <div class="calendar__available">Available Tickets: {{ value.tickets }}</div>
            {{#link-to "calendar.detail" class="calendar__claim" }}Claim Ticket{{/link-to}}
          </div>
        </div>
      </div>
      {{/each}}
    </div>
</div>
