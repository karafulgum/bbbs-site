<div class="container">
  <div class="form form--user">
    <div class="card__user">
      <div class="card__name">
        <h2 class="card__name--first">{{model.firstName}}</h2>
        <h2 class="card__name--last">{{model.lastName}}</h2>
      </div>
      <div class="card__content">
        <img src="{{model.fullProfilePicUrl}}" class="form__img">
        {{!-- <h4 class="card__info">Name: {{model.firstName}} {{model.lastName}}</h4> --}}
        <div class="card__content--info">
          <h4 class="card__info">Email: {{model.email}}</h4>
          <h4 class="card__info">Phone Number: {{model.phone}}</h4>
          <h4 class="card__info">Little's Name: {{model.little}}</h4>
          <h4 class="card__info">Admin: {{if model.isAdmin "üèÅ"}}</h4>
          <h4 class="card__info">Approved: {{if model.isApproved "üèÅ"}}</h4>
        </div>
      </div>
    </div>
    <div class="form__buttons">
      {{#if model.isApproved}}
        <button class="form__btn" {{action "toggleAndSave" "isApproved"}}>Removal Approval</button>
      {{else}}
        <button class="form__btn" {{action "toggleAndSave" "isApproved"}}>Approve User</button>
      {{/if}}
      {{#if model.isAdmin}}
        <button class="form__btn form__btn--middle" {{action "toggleAndSave" "isAdmin"}}>Remove Admin Access</button>
      {{else}}
        <button class="form__btn form__btn--middle" {{action "toggleAndSave" "isAdmin"}}>Make User Admin</button>
      {{/if}}
      <button class="form__btn form__btn--danger" {{action "deleteUser"}}>Delete User</button>
    </div>
  </div>
</div>
